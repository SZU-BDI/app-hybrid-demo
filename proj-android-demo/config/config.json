{
  "app_ver": "1",
  //map the api to the class
  "api_mapping": {
    "_app_activity_open": "szu.bdi.hybrid.core.ApiHybridUiOpen",
    "_app_activity_close": "szu.bdi.hybrid.core.ApiHybridUiClose"
  },
  //map the ui to the class
  "ui_mapping": {
    "UiRoot": {
      "mode": "WebView",
      "topbar": "N",
      "address": "root.htm",
      //default address
      "class": "szu.bdi.hybrid.core.WebViewUi"
    },
    "UiContent": {
      "mode": "WebView",
      "topbar": "Y",
      "class": "szu.bdi.hybrid.core.WebViewUi"
    },
    "UiGestureUnlock": {
      "mode": "Native",
      "class": "szu.bdi.hybrid.demo.UiGestureUnlock"
    },
    "UiGestureSetup": {
      "mode": "Native",
      "class": "szu.bdi.hybrid.demo.UiGestureSetup"
    },
    "UiHome": {
      "mode": "Native",
      "class": "szu.bdi.hybrid.demo.UiHome"
    }
  },
  //auth: bind api to ui
  "api_auth": {
    "UiRoot": {
      "root.htm": [
        "_app_activity_open",
        "_app_activity_close"
      ]
    },
    "UiContent": {
    }
  }
}
