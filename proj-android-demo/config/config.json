{
  //map the api to the implement class
  "api_mapping": {
    "_app_todo": "szu.bdi.hybrid.core.ApiTestTODO",
    "_app_web": "szu.bdi.hybrid.core.ApiWebRequest",
    "_app_activity_open": "szu.bdi.hybrid.core.ApiUiOpen",
    "_app_activity_close": "szu.bdi.hybrid.core.ApiUiClose"
  },
  "app_ver": "0.0.27",
  //map the ui to the class (used by szu.bdi.hybrid.core.ApiUiOpen)
  "ui_mapping": {
    "UiRoot": {
      "mode": "WebView",
      "topbar": "N",
      "address": "root.htm",
      "class": "szu.bdi.hybrid.core.SimpleHybridWebViewUi"
    },
    "UiContent": {
      "mode": "WebView",
      "topbar": "Y",
      "class": "szu.bdi.hybrid.core.SimpleHybridWebViewUi"
    },
    "OtherContent": {
      "mode": "WebView",
      "topbar": "Y",
      "class": "szu.bdi.hybrid.core.SimpleWebViewUi"
    },
    "UiHome": {
      "mode": "WebView",
      "topbar": "Y",
      "class": "szu.bdi.hybrid.core.SimpleHybridWebViewUi"
    }
  },
  //auth-binding: api to ui (used by callHandler()). * TODO improve better pattern in furture
  "api_auth": {
    "UiRoot": {
      "root.htm": [
        "_app_web",
        "_app_activity_open",
        "_app_activity_close"
      ]
    },
    "UiHome": {
      "content.htm": [
        "_app_activity_open",
        "_app_activity_close"
      ]
    },
    "UiContent": {
      ".*": [
        "_app_activity_open",
        "_app_activity_close"
      ]
    }
  }
}
